---
const {
    image1 = '/images/example1.jpg',
    image2 = '/images/example2.jpg',
    alt1 = 'Illustration 1',
    alt2 = 'Illustration 2',
    title = 'Titre de la section',
    text = 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.'
} = Astro.props;
---

<section class="w-full px-4 py-8 bg-white">
    <div class="max-w-6xl mx-auto flex flex-col md:flex-row items-center gap-6 md:gap-12">
        <!-- Bloc texte -->
        <div class="w-full md:w-1/2 space-y-4">
            <h2 class="text-2xl md:text-3xl font-semibold text-gray-900">{title}</h2>
            <p class="text-gray-700 text-base md:text-lg leading-relaxed">{text}</p>
        </div>

        <!-- Bloc image -->
        <div class="w-full md:w-1/2 grid grid-cols-2 gap-4 content-center items-center">
            <img
                    src={image1}
                    alt={alt1}
                    class="w-full h-[400px]  object-cover shadow-md"
                    loading="lazy"
            />
            <img
                    src={image2}
                    alt={alt2}
                    class="w-full h-[400px]  object-cover shadow-md"
                    loading="lazy"
            />
        </div>
    </div>
</section>
