---
const images = [
    {src: '/src/assets/image1.jpg', alt: 'Image 1'},
    {src: '/src/assets/image2.jpg', alt: 'Image 2'},
    {src: '/src/assets/image3.jpg', alt: 'Image 3'},
];
---
<section class="w-full h-1/2 flex flex-col justify-center items-center bg-white px-4 m-3">
    <div class="w-full max-w-6xl grid grid-cols-1 md:grid-cols-3 gap-4 h-full">
        {images.map(({src, alt}) => (
                <div class="w-full h-full overflow-hidden">
                    <img
                            src={src}
                            alt={alt}
                            class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                            loading="lazy"
                    />
                </div>
        ))}
    </div>
</section>